pipeline {
    agent any

    environment {
        MVN_HOME = tool 'apache-maven-3.9.5'
    }

    stages {
        stage('Build'){
            steps {
                dir('customer_application') {
                    bat "${MVN_HOME}/bin/mvn clean install -DskipTests"
                }
            }
        }

        stage('Test'){
            steps{
                dir('customer_application') {
                    bat "${MVN_HOME}/bin/mvn test"
                }
            }
        }
    }
}
