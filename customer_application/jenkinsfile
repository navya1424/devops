pipeline {
    agent any

    environment {
        MAVEN_HOME = tool 'apache-maven-3.9.5'
    }

    tools {
        jdk 'java-17'
    }

    stages {
        stage('Build'){
            steps {
                dir('customer_application') {
                    bat "${env.MAVEN_HOME}\\bin\\mvn clean install -DskipTests"
                }
            }
        }

        stage('Test'){
            steps{
                dir('customer_application') {
                    bat "${env.MAVEN_HOME}\\bin\\mvn test"
                }
            }
        }
    }
}
