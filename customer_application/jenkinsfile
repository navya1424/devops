pipeline {
	agent any

	environment {
		M2_HOME = tool 'apache-maven-3.9.5'
		PATH = "$PATH:${env.M2_HOME}/bin"
	}

	tools {
		jdk 'java-17'
	}

	stages {

		stage('Build'){
			steps {
				script {
					dir('customer_application') {
						bat "mvn clean install -DskipTests"
					}
				}
			}
		}

		stage('Test'){
			steps{
				script {
					dir('customer_application') {
						bat "mvn test"
					}
				}
			}
		}
	}
}
